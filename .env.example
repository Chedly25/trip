# Real-World European Roadtrip Planner - API Configuration
# Copy this file to .env and add your actual API keys

# Google Maps APIs (Required for best routing and geocoding)
# Get your key at: https://console.cloud.google.com/apis/credentials
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# OpenWeatherMap API (Required for weather data)
# Get your key at: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here

# OpenRoute Service (Alternative to Google Maps - Free tier available)
# Get your key at: https://openrouteservice.org/
OPENROUTE_API_KEY=your_openroute_api_key_here

# Ticketmaster API (For event discovery)
# Get your key at: https://developer.ticketmaster.com/
TICKETMASTER_API_KEY=your_ticketmaster_api_key_here

# Booking.com API (For accommodation data - requires partnership)
# Alternative: Use web scraping fallback
BOOKING_COM_API_KEY=your_booking_api_key_here

# Claude AI API (For enhanced insights and recommendations)
# Get your key at: https://console.anthropic.com/
CLAUDE_API_KEY=your_claude_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///roadtrip_planner.db

# Application Settings
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your_secret_key_here

# Cache Settings
CACHE_DURATION_HOURS=6
REDIS_URL=redis://localhost:6379/0

# Rate Limiting
REQUESTS_PER_MINUTE=100
BURST_LIMIT=200

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Feature Flags
ENABLE_WEB_SCRAPING=True
ENABLE_CACHING=True
ENABLE_RATE_LIMITING=True
ENABLE_AI_FEATURES=True